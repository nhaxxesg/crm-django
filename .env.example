# ============================================
# Variables de Entorno - CRM API
# ============================================
# Copia este archivo a .env y ajusta los valores según tu entorno
# IMPORTANTE: Nunca commitees el archivo .env al repositorio

# ============================================
# Django Core Settings
# ============================================
# Clave secreta de Django (genera una nueva para producción)
# Puedes generar una con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-me-in-production-1234567890abcdefghijklmnopqrstuvwxyz

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por comas)
# En desarrollo puedes usar: localhost,127.0.0.1,*
# En producción especifica los dominios exactos: ejemplo.com,api.ejemplo.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database Configuration (MySQL)
# ============================================
# Nombre de la base de datos
DATABASE_NAME=crm_db

# Usuario de MySQL
DATABASE_USER=crm_user

# Contraseña de MySQL
DATABASE_PASSWORD=crm_password

# Host de MySQL (localhost para local, nombre del servicio para Docker)
DATABASE_HOST=localhost

# Puerto de MySQL (3306 es el default)
DATABASE_PORT=3306
